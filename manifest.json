{
  "manifest_version": 3,
  "name": "Find the cursor position in screen",
  "description": "Find the cursor position in screen",
  "version": "1.0",
  "action": {
    "default_icon": "assets/icon.png",
    "default_title": "Find the cursor position in screen",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
} 
